{{> frontend.nav}}

{{!-- about us --}}
<section class="container-fluid d-flex p-2 justify-content-center align-items-center vh-100" id="about">
  <div class="container">
    <div class="row ">
      <div class="col-md-6">
        <h2 class="text-left animated fadeInRightBig">{{title}}</h2>
        <p class="animated fadeInRightBig slow">
          {{text}}
        </p>
        <form action="/send" method="POST" class="animated fadeInLeftBig">
          <div class="form-row my-4">
            <div class="col">
              <input type="text" class="form-control" name="fname" placeholder="First name">
            </div>
            <div class="col">
              <input type="text" class="form-control" name="lname" placeholder="Last name">
            </div>
          </div>
          <div class="form-group mb-4">
            <input type="text" class="form-control" name="phone" placeholder="Enter your phone number">
          </div>
          <div class="form-group mb-4">
            <input type="email" class="form-control" name="email" placeholder="Enter email">
          </div>
          <button type="submit" class="btn btn-block btn-orange hvr-bounce-to-bottom">Send Me My Free One Day Pass!</button>
        </form>
      </div>
    </div>
  </div>
</section>

{{> frontend.footer}}