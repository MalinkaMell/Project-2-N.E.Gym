<!-- Category -->
<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <i class="fas fa-table"></i>
      {{ title }}
    </div>
    <div id="save_btn_placeholder">
      {{#ifMore user.memberLvl 5}}<button class="btn btn-dark" id="edit_category">Edit</button>{{/ifMore}}
      {{#ifMore user.memberLvl 6}}<button class="btn btn-danger" id="delete_category">Delete</button>{{/ifMore}}
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" width="100%" cellspacing="0">
              <tr>
            <td>ID:</td>
            <td id="category_id">{{ results.id }}</td>
          </tr>
          <tr>
            <td>Name</td>
            <td id="category_name">{{ results.name }}</td>
          </tr>
          <tr>
            <td>Description</td>
            <td id="category_desc">{{ results.description }}</td>
          </tr>
          <tr>
            <td>Photo</td>
            <td id="category_img_td"><img src="{{ results.photo }}" class="img-thumbnail" id="category_img_url" width="250"></td>
          </tr>
            </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Last updated <span id="date"></span></div>
</div>