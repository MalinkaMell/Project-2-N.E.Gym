<!-- Amenities list -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    {{ title }}
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Photo</th>
            <th>Manage</th>
          </tr>
        </tfoot>
        <tbody>
          {{#each results}}
          <tr>
            <td>{{ id }}</td>
            <td><a class="link" href="/admin/categories/{{ id }}">{{ name }}</a></td>
            <td>{{ description }}</td>
            <td><img src="{{ photo }}" class="img-fluid img-thumbnail"></td>
            <td><a class="btn btn-dark btn-block" href="/admin/categories/{{ id }}">View</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer small text-muted">Last updated <span id="date"></span></div>
</div>
{{#ifMore user.memberLvl 4}}
<!-- Add new  -->
<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Add New Class Category
  </div>
  <div class="card-body">
    <form name="categories_form" action="/admin/categories" method="POST">
      <div class="form-group">
        <label for="category_name">Name</label>
        <input type="text" class="form-control" id="category_name" aria-describedby="nameHelp" required>
        <small id="nameHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="category_description">Description</label>
        <textarea name="category_description" class="form-control"  id="category_description" aria-describedby="descriptionHelp" required></textarea>
        <small id="descriptionHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="category_photo">Photo</label>
        <input type="text" class="form-control" id="category_photo" aria-describedby="photoHelp" required>
        <small id="photoHelp" class="form-text text-muted"></small>
      </div>
      <button type="submit" id="create_category" class="btn btn-dark">Submit</button>
    </form>
  </div>
</div>
{{/ifMore}}